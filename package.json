{
	"name": "nextway-server",
	"version": "0.0.1",
	"description": "",
	"author": "",
	"private": true,
	"license": "UNLICENSED",
	"scripts": {
		"build": "nest build",
		"format": "",
		"start": "npx dotenv-cli -e .env.development -- nest start",
		"dev": "npx dotenv-cli -e .env.development -- nest start --watch",
		"debug": "npx dotenv-cli -e .env.development -- nest start --debug --watch",
		"prod": "node dist/main",
		"lint": "",
		"test": "npx dotenv-cli -e .env.test -- jest --runInBand --config ./jest.config.ts --detectOpenHandles",
		"test:unit": "npx dotenv-cli -e .env.test -- jest --runInBand --config ./jest.unit.config.ts --watch",
		"test:int": "npx dotenv-cli -e .env.test -- jest --runInBand --config ./jest.int.config.ts --detectOpenHandles --watch",
		"test:watch": "jest --watch",
		"test:cov": "npx dotenv-cli -e .env.test -- jest --runInBand --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "npx dotenv-cli -e .env.test -- jest --runInBand --config ./jest.e2e.config.ts --detectOpenHandles --watch",
		"containers:dev": "npx dotenv-cli -e .env.development -- docker compose up -d",
		"typeorm": "ts-node ./node_modules/typeorm/cli",
		"migration-run:dev": "npx dotenv-cli -e .env.development -- ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js -d ./src/shared/infra/database/typeorm/config.ts migration:run",
		"migration-generate:dev": "npx dotenv-cli -e .env.development -- ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js -d ./src/shared/infra/database/typeorm/config.ts migration:generate ./src/core/$npm_config_module/infra/database/typeorm/migrations/$npm_config_name",
		"migration-create:dev": "npx dotenv-cli -e .env.development -- npm run typeorm -- migration:create ./src/core/$npm_config_module/infra/database/typeorm/migrations/$npm_config_name",
		"migration-revert:dev": "npx dotenv-cli -e .env.development -- ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js -d ./src/shared/infra/database/typeorm/config.ts migration:revert"
	},
	"dependencies": {
		"@fastify/cookie": "^9.4.0",
		"@fastify/static": "^7.0.4",
		"@fastify/swagger": "^8.15.0",
		"@nestjs-modules/mailer": "^2.0.2",
		"@nestjs/axios": "^4.0.0",
		"@nestjs/common": "^10.0.0",
		"@nestjs/config": "^3.3.0",
		"@nestjs/core": "^10.0.0",
		"@nestjs/jwt": "^10.2.0",
		"@nestjs/platform-fastify": "^10.3.8",
		"@nestjs/swagger": "^8.1.0",
		"@nestjs/typeorm": "^10.0.2",
		"@supabase/supabase-js": "^2.49.1",
		"axios": "^1.8.3",
		"bcrypt": "^5.1.1",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.1",
		"fastify": "4.28.1",
		"pg": "^8.13.1",
		"reflect-metadata": "^0.2.0",
		"rxjs": "^7.8.1",
		"typeorm": "^0.3.20",
		"typeorm-transactional": "^0.5.0"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@faker-js/faker": "^9.3.0",
		"@nestjs/cli": "^10.0.0",
		"@nestjs/schematics": "^10.0.0",
		"@nestjs/testing": "^10.0.0",
		"@types/bcrypt": "^5.0.2",
		"@types/jest": "^29.5.2",
		"@types/multer": "^1.4.12",
		"@types/node": "^20.3.1",
		"@types/pg": "^8.11.10",
		"@types/supertest": "^6.0.0",
		"jest": "^29.5.0",
		"source-map-support": "^0.5.21",
		"supertest": "^7.0.0",
		"ts-jest": "^29.1.0",
		"ts-loader": "^9.4.3",
		"ts-node": "^10.9.1",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.1.3"
	},
	"jest": {
		"moduleFileExtensions": ["js", "json", "ts"],
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": ["**/*.(t|j)s"],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	}
}
